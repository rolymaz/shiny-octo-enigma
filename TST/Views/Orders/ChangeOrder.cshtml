@model TST.Models.OrderChangeRequestModel

<h2>@ViewBag.Title</h2>

 
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem { Value = "0", Text = "Open"});
    listItems.Add(new SelectListItem { Value = "1", Text = "Pass" });   
    listItems.Add(new SelectListItem { Value = "2", Text = "Fail" });
    listItems.Add(new SelectListItem { Value = "3", Text = "Cancel" });
    listItems.Add(new SelectListItem { Value = "4", Text = "Close" });
    
   
}



@using (Html.BeginForm("ChangeOrder", "Orders", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Test Order Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ChangeRequest.OrderId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ChangeRequest.OrderId, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Trigger, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
         
            @Html.DropDownListFor(model => model.Trigger, listItems, "-- Select Trigger --")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChangeRequest.Username, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ChangeRequest.Username, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ChangeRequest.ReasonId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ChangeRequest.ReasonId, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChangeRequest.NewNote, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ChangeRequest.NewNote, new { @class = "form-control" })
        </div>
    </div>

   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change order" class="btn btn-default" />
        </div>
    </div>
}
